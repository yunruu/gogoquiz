{
  "env": {
    "browser": true,
    "node": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": "warn",
    "react/prop-types": "off"
  },
  "overrides": [
    {
      "files": ["*.js", "*.jsx"]
    }
  ],
  "linterOptions": {
    "reportUnusedDisableDirectives": true
  }
}
